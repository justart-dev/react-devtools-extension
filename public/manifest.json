{
  "manifest_version": 3,
  "name": "Taillog - Console & Network Logger",
  "version": "1.3.1",
  "description": "Taillog helps web developers debug faster by monitoring console logs, network requests, and clipboard history.",
  "action": {
    "default_popup": "index.html",
    "default_title": "Open Taillog",
    "default_icon": {
      "16": "assets/cat.png",
      "48": "assets/cat.png",
      "128": "assets/cat.png"
    }
  },
  "icons": {
    "16": "assets/cat.png",
    "48": "assets/cat.png",
    "128": "assets/cat.png"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "inject.js",
        "locator-inject.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}